{
  "all": true,
  "check-coverage": true,
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80,
  "include": [
    "utils/**/*.js",
    "controllers/**/*.js",
    "routes/**/*.js",
    "workers/**/*.js",
    "middleware/**/*.js"
  ],
  "exclude": [
    "tests/**",
    "coverage/**",
    "config/**",
    "node_modules/**",
    "*.js"
  ],
  "reporter": [
    "html",
    "text",
    "text-summary",
    "lcov"
  ],
  "report-dir": "./coverage"
}
